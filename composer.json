{
  "name": "smolblog/smolblog-wp",
  "description": "Smolblog as a WordPress plugin",
  "type": "wordpress-plugin",
  "license": "AGPL-3.0-only",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Smolblog",
      "email": "dev@smolblog.org"
    },
    {
      "name": "Evan Hildreth",
      "email": "me@eph.me"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/smolblog/smolblog-core"
    },
    {
      "type": "vcs",
      "url": "https://github.com/smolblog/smolblog-twitter"
    }
  ],
  "require": {
    "smolblog/smolblog-core": "dev-main",
    "smolblog/smolblog-twitter": "dev-main"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "wp-coding-standards/wpcs": "dev-develop"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true
    }
  },
  "scripts": {
    "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf"
  }
}
